%h1 The following movies containing #{@search_text} were found on TMDb 

= form_tag :action => 'add_tmdb_movies' do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @matching_movies.each do |movie|
        %tr
          %td= movie[:title]
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmbdb_id]}]", 1, @selected_movies.include?(movie), :id => "checkbox_#{movie[:tmbdb_id]}"

  = submit_tag "Add Selected Movies", :id => "movies_button"


= link_to 'Return to Movie List', movies_path